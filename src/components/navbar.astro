<header class="absolute inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href={Astro.url.pathname === '/dashboard' ? '#' : '/'} class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img class="h-8 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="">
        </a>
        <!-- Enlaces principales (visibles cuando está autenticado) -->
        <div id="main-nav-links" class="hidden ml-8 items-center gap-6">
          <a href="/dashboard" class="text-sm font-semibold text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300">Inicio</a>
          <a href="/proyectos" class="text-sm font-semibold text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300">Proyectos</a>
          <a href="/comunidad" class="text-sm font-semibold text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300">Comunidad</a>
          <a href="/perfil" class="text-sm font-semibold text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300">Mi Perfil</a>
        </div>
      </div>

      <div class="hidden lg:flex lg:gap-x-12">
      </div>

      <div class="flex items-center">
        <!-- Botones de navegación desktop -->
        <div class="nav-toggle hidden lg:flex items-center gap-4 mr-4">
          <!-- Botones para usuarios no autenticados -->
          <div id="auth-buttons" class="flex items-center gap-4">
            <a href="/login" class="text-sm font-semibold text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300">Log in <span aria-hidden="true">&rarr;</span></a>
            <a href="/register" class="rounded-md bg-slate-800 dark:bg-slate-700 py-2 px-4 text-sm font-semibold text-white hover:bg-slate-700 dark:hover:bg-slate-600 transition-colors">Register</a>
          </div>
          <!-- Botones para usuarios autenticados -->
          <div id="user-buttons" class="hidden items-center gap-4">
            <button id="logout-button" class="rounded-md bg-red-600 dark:bg-red-700 py-2 px-4 text-sm font-semibold text-white hover:bg-red-700 dark:hover:bg-red-800 transition-colors">Cerrar sesión</button>
          </div>
        </div>

        <!-- Contenedor de botones de acción (dark mode y menú móvil) -->
        <div class="flex items-center gap-3">
          <!-- El botón de dark mode se insertará aquí por JavaScript -->
          <!-- Botón de menú móvil -->
          <button type="button" id="mobile-menu-button" class="lg:hidden inline-flex items-center justify-center rounded-md p-2 text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
            <span class="sr-only">Open main menu</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>
      </div>
    </nav>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="lg:hidden hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop -->
      <div class="fixed inset-0 z-50 bg-gray-900/80"></div>
      
      <!-- Menu panel -->
      <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white dark:bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
        <div class="flex items-center justify-between">
          <a href={Astro.url.pathname === '/dashboard' ? '#' : '/'} class="-m-1.5 p-1.5">
            <span class="sr-only">Your Company</span>
            <img class="h-8 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="">
          </a>
          <button type="button" id="close-menu-button" class="-m-2.5 rounded-md p-2.5 text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
            <span class="sr-only">Close menu</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <!-- Enlaces principales del menú móvil -->
              <div id="mobile-main-nav-links" class="hidden">
                <a href="/dashboard" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Inicio</a>
                <a href="/proyectos" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Proyectos</a>
                <a href="/comunidad" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Comunidad</a>
              </div>
            </div>
            
            <div class="py-6 flex flex-col gap-4">
              <!-- Botones para usuarios no autenticados -->
              <div id="mobile-auth-buttons" class="flex flex-col gap-4">
                <a href="/login" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Log in</a>
                <a href="/register" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold bg-slate-800 dark:bg-slate-700 text-white hover:bg-slate-700 dark:hover:bg-slate-600 text-center">Register</a>
              </div>
              <!-- Botones para usuarios autenticados -->
              <div id="mobile-user-buttons" class="hidden flex-col gap-4">
                <a href="/perfil" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800">Mi Perfil</a>
                <button id="mobile-logout-button" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold bg-red-600 dark:bg-red-700 text-white hover:bg-red-700 dark:hover:bg-red-800 text-center">Cerrar sesión</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</header>

<script type="module" src="/src/utils/mobileMenu.js"></script>
<script type="module" src="/src/utils/auth.js"></script>