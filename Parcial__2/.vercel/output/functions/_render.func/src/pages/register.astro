---
import BaseLayout from "../layouts/BaseLayout.astro"
---
<BaseLayout title="Registro">
  <main class="min-h-[calc(100vh-64px)] flex items-center justify-center">
    <div class="dark:bg-slate-800 p-8 rounded-2xl shadow-md w-full max-w-sm mx-4">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-800 dark:text-white">Crear cuenta</h1>
      <form id="register-form" class="space-y-4">
        <div>
          <label for="email" class="block mb-1 text-gray-700 dark:text-white">Correo electrónico</label>
          <input type="email" id="email" required
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <div>
          <label for="password" class="block mb-1 text-gray-700 dark:text-white">Contraseña</label>
          <input type="password" id="password" required minlength="6"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <button type="submit"
          class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition dark:text-white">
          Registrarse
        </button>

        <p id="feedback"></p>

        <p class="text-center text-sm mt-4 text-gray-600 dark:text-white">
          ¿Ya tienes cuenta?
          <a href="/login" class="text-blue-500 hover:underline">Inicia sesión</a>
        </p>
      </form>
    </div>
  </main>
  <script type="module" src="/src/utils/auth.js"></script>
</BaseLayout>
